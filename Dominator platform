    <script>
        // تم حذف كود تسجيل الدخول
        
        // --- Modal Logic ---
        const openModalButtons = document.querySelectorAll('[data-modal-target]');
        openModalButtons.forEach(button => { button.addEventListener('click', () => { const modal = document.querySelector(button.dataset.modalTarget); openModal(modal); }); });

        function openModal(modal) {
            if (modal == null) return;
            modal.classList.add('active');
            const closeButton = modal.querySelector('.modal-close-btn');
            const closeHandler = () => { closeModal(modal); closeButton.removeEventListener('click', closeHandler); modal.removeEventListener('click', overlayClickHandler); };
            const overlayClickHandler = (e) => { if (e.target === modal) { closeHandler(); } };
            closeButton.addEventListener('click', closeHandler);
            modal.addEventListener('click', overlayClickHandler);
        }

        function closeModal(modal) {
            if (modal == null) return;
            modal.classList.remove('active');
        }

    </script>
